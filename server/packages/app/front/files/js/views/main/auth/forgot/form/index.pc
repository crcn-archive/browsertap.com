<div>
  {{#if: error }}
    {{ ("forgotForm.errors." + error.code) | t() }}
  {{/}}

  <form data-bind="{{ onSubmit: resetPassword() }}">
    <input type="text" name="email" data-bind="{{ model: user }}" placeholder="Email"></input>
    <input type="submit" name="login" value="Reset Password"></input>
    <a href="#" data-bind="{{ onClick: 'login' | redirect() }}">Login</a>
  </form>
</div>